{
  "version": "1.0.0",
  "description": "MCP Server Configuration for NeuraLaunch - Connects AI agents to external tools and services",
  "servers": [
    {
      "name": "github",
      "enabled": true,
      "description": "GitHub integration for repository management, code review, and CI/CD",
      "url": "https://api.github.com/mcp",
      "protocol": "http",
      "authentication": {
        "type": "bearer",
        "envVar": "GITHUB_MCP_TOKEN"
      },
      "capabilities": [
        "repository_management",
        "code_review",
        "pull_requests",
        "issues",
        "actions",
        "webhooks"
      ],
      "agents": [
        "github-agent",
        "deployment-agent",
        "backend-agent",
        "frontend-agent",
        "critic-agent"
      ],
      "rateLimits": {
        "requestsPerHour": 5000,
        "burstSize": 100
      }
    },
    {
      "name": "brave-search",
      "enabled": true,
      "description": "Brave Search API for web research and documentation lookup",
      "url": "https://api.search.brave.com/res/v1/web/search",
      "protocol": "http",
      "authentication": {
        "type": "apiKey",
        "envVar": "BRAVE_SEARCH_API_KEY",
        "header": "X-Subscription-Token"
      },
      "capabilities": [
        "web_search",
        "documentation_lookup",
        "technology_research",
        "best_practices_discovery"
      ],
      "agents": [
        "research-agent",
        "analyzer-agent",
        "documentation-agent",
        "planning-agent"
      ],
      "rateLimits": {
        "requestsPerMonth": 15000,
        "requestsPerSecond": 1
      }
    },
    {
      "name": "filesystem",
      "enabled": true,
      "description": "Local filesystem operations for code generation and file management",
      "url": "local://filesystem",
      "protocol": "local",
      "authentication": {
        "type": "none"
      },
      "capabilities": [
        "file_read",
        "file_write",
        "directory_operations",
        "file_search",
        "git_operations"
      ],
      "agents": [
        "backend-agent",
        "frontend-agent",
        "infrastructure-agent",
        "documentation-agent",
        "optimization-agent"
      ],
      "security": {
        "allowedPaths": [
          "/workspace",
          "/tmp/neuralaunch",
          "/projects"
        ],
        "deniedPaths": [
          "/etc",
          "/sys",
          "/root",
          "/.env"
        ]
      }
    },
    {
      "name": "playwright",
      "enabled": true,
      "description": "Playwright MCP server for browser automation, testing, and deployment verification",
      "url": "http://localhost:3100/mcp",
      "urlNote": "Override with MCP_PLAYWRIGHT_URL environment variable for production",
      "protocol": "http",
      "authentication": {
        "type": "none"
      },
      "capabilities": [
        "browser_automation",
        "screenshot",
        "web_scraping",
        "form_interaction",
        "deployment_verification",
        "ui_testing",
        "accessibility_testing",
        "performance_testing",
        "cross_browser_testing"
      ],
      "agents": [
        "testing-agent",
        "deployment-agent",
        "frontend-agent",
        "integration-agent",
        "monitoring-agent",
        "optimization-agent"
      ],
      "rateLimits": {
        "maxConnections": 5,
        "requestsPerSecond": 2,
        "timeout": 60000
      },
      "config": {
        "headless": true,
        "defaultBrowser": "chromium",
        "supportedBrowsers": ["chromium", "firefox", "webkit"],
        "viewport": {
          "width": 1920,
          "height": 1080
        },
        "userAgent": "NeuraLaunch-Agent/1.0"
      }
    },
    {
      "name": "claude-skills",
      "enabled": true,
      "description": "Claude AI Skills - Advanced reasoning, code generation, and extended thinking capabilities",
      "url": "http://localhost:3101/mcp",
      "urlNote": "Override with MCP_CLAUDE_SKILLS_URL environment variable for production",
      "protocol": "http",
      "authentication": {
        "type": "bearer",
        "envVar": "ANTHROPIC_API_KEY"
      },
      "capabilities": [
        "extended_thinking",
        "complex_reasoning",
        "code_generation",
        "code_review",
        "architecture_design",
        "problem_solving",
        "refactoring",
        "test_generation",
        "documentation_generation",
        "debugging",
        "performance_analysis",
        "security_review"
      ],
      "agents": [
        "planning-agent",
        "analyzer-agent",
        "research-agent",
        "validation-agent",
        "frontend-agent",
        "backend-agent",
        "database-agent",
        "infrastructure-agent",
        "critic-agent",
        "testing-agent",
        "documentation-agent",
        "optimization-agent",
        "integration-agent"
      ],
      "rateLimits": {
        "requestsPerMinute": 50,
        "requestsPerHour": 1000,
        "timeout": 120000
      },
      "config": {
        "model": "claude-sonnet-4-5-20250929",
        "defaultThinkingBudget": 8000,
        "enableExtendedThinking": true,
        "enableChainOfThought": true,
        "temperature": 0.3,
        "maxTokens": 16000
      }
    }
  ],
  "defaultConfig": {
    "timeout": 30000,
    "retries": 3,
    "retryDelay": 1000,
    "connectionPoolSize": 10
  },
  "monitoring": {
    "enableMetrics": true,
    "enableTracing": true,
    "logLevel": "info"
  }
}
